---
import Bade from '../components/Bade.astro';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Socials from '../components/Socials.astro'
import Footer from '../components/Footer.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import MailIcon from '../components/icons/Mail.astro'
import CodeIcon from '../components/icons/Code.astro'
import Projects from '../components/Projects.astro';
import AboutIcon from '../components/icons/ProfileS.astro'
import Briefcase from '../components/icons/Briefcase.astro'
import AboutMe from '../components/AboutMe.astro'
import Experience from '../components/Experience.astro';
---

<Layout title="Portfolio de Orlando - Desarrollador y Programador web actualmente estudiando ingenieria"
		description="Contrata a Orlando para crear tu aplicacion web o movil">
	<main>
		<SectionContainer id="home" class="py-44 pb-32">
			<img
				class="rounded-full size-14 mb-4" 
				src='/img/perfil2.jpeg' 
				alt="george photo" 
			/>
			<h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 
			pb-6 lg:pb-10">
				Hey im Orlando 
				<a 
					download
					href="/resume.pdf" 
					target="_blank" 
					rel="noopener" 
					class="flex justify-center items-center">

					<Bade />
				</a>
			</h1>

			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">I am a Computer Systems Engineering student, 
				currently pursuing a Bachelor's Degree at the Escuela Superior de Cómputo, 
				part of the Instituto Politécnico Nacional, in Mexico City, Mexico.
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<Socials href="https://www.linkedin.com/in/orlando-gomez-b0a393330/">
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</Socials>
					
				<Socials href="https://github.com/landogomez">
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</Socials>

				<Socials id="contact">
					<MailIcon class="size-4 md:size-6"/>
					ogomez.isc@gmail.com
				</Socials>
			</nav>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7"/>
				Experience
			</h2>
			<Experience />
		</SectionContainer>
		
		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Projects
	
			</h2>

			<Projects />

		</SectionContainer>

		<SectionContainer id="about">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<AboutIcon class="size-7" />
				About me
	
			</h2>
			<AboutMe id="about"/>

		</SectionContainer>

		<Footer />
	</main>
</Layout>

