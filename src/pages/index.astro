---
import Bade from '../components/Bade.astro';
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Socials from '../components/Socials.astro'
import Footer from '../components/Footer.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro'
import GitHubIcon from '../components/icons/GitHub.astro'
import MailIcon from '../components/icons/Mail.astro'
import CodeIcon from '../components/icons/Code.astro'
import Projects from '../components/Projects.astro';
---

<Layout title="Portfolio de Orlando - Desarrollador y Programador web actualmente estudiando ingenieria"
		description="Contrata a Orlando para crear tu aplicacion web o movil">
	<main>
		<SectionContainer id="about" class="py-44 pb-32">
			<img
				class="rounded-full size-12 mb-4" 
				src="https://images.app.goo.gl/jPiqfRPQew7w8jzN9" 
				alt="george photo" 
			/>
			<h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 
			pb-6 lg:pb-10">
				Hey im Orlando 
				<a 
					href="https://linkedin.com" 
					target="_blank" 
					rel="noopener" 
					class="flex justify-center items-center">

					<Bade>Available for hire</Bade>
				</a>
			</h1>

			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">Software Enginner student. From Mexico City Mexico ...
				Lorem ipsum dolor, sit amet consectetur adipisicing elit. Facilis, unde, architecto 
				ullam fugit ut, at illum optio sint recusandae ducimus sunt. Eligendi a perspiciatis atque. 
				Commodi dolore nihil minima sapiente?
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<Socials >
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</Socials>
					
				<Socials>
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</Socials>

				<Socials>
					<MailIcon class="size-4 md:size-6"/>
					ogomez.isc@gmail.com
				</Socials>
			</nav>
		</SectionContainer>
		
		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
	
			</h2>

			<Projects />

		</SectionContainer>

		<Footer />
	</main>
</Layout>

