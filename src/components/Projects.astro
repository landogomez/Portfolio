---
import Tailwind from "./icons/Tailwind.astro"
import Html from './icons/HT.astro'
import JS from './icons/JS.astro'
import Reac from './icons/Reac.astro'
import SASS from './icons/SASS.astro'
import C from './icons/C.astro'
import CSH from './icons/CSH.astro'
import Ts from './icons/TS.astro'
import LinkButton from "./LinkButton.astro"
import GitHub from "./icons/GitHub.astro"
import WWW from './icons/WW.astro'

const TAGS = {
    TAILWIND: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: Tailwind,
    },
    HTML: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: Html,
    },
    JS:{
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: JS,
    },
    REACT: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: Reac,

    },
    SASS: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: SASS,
    },
    C: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: C,
    },
    CSHARP: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: CSH,
    },
    TS: {
        name: '',
        class: 'rounded-full border border-gray-800 bg-gray-950  text-gray-300 bg-gradient-to-t from-[#fff] to-[#8678f9] bg-clip-text text-transparent',
        icon: Ts,
    }

}


const PROJECTS = [
    {
        title: 'Project 1',
        description: 'Loremipusm   ',
        link: '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200',
        tags: [TAGS.HTML,TAGS.TAILWIND, TAGS.JS, TAGS.REACT, TAGS.SASS, TAGS.C, TAGS.CSHARP, TAGS.TS]

    }
]
---
<section class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({image ,title, description, tags, link, github}) => (
            <article>
                <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
                <p class="text-lg mb-4 text-pretty">{description}</p>
                <ul class="flex gap-x-2 flex-row mb-2">
                    {
                    tags.map(tag => (
                        <li>
                            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                                <tag.icon class="size-4"/>
                                {tag.name}
                            </span>
                        </li>
                    ))}
                </ul>
                <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}/>
                <footer class="flex gap-x-4 mt-4">
                    {github && <LinkButton href={github}>
                        <GitHub class="size-6"/>
                        Check full code here
                    </LinkButton>}

                    <LinkButton href={link}>
                        <WWW />
                        Go to Website
                    </LinkButton>
                </footer>
            </article>
        ))
    }
</section>